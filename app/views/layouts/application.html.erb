<!DOCTYPE html>
<html>
<head>
  <title>Notebook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
</head>
<body>

	<div id="container" class="notepad">

		<header>
			<div id="theme_links">
					<%= link_to 'Legal Pad', '#', :id => 'legalpad_link' %>
					|
					<%= link_to "Notepad", '#', :id => 'notepad_link' %>
          |
          <%= link_to "Sign In", '#' %>
          |
          <%= link_to "Sign Out", '#' %>
			</div>
			<h1>
        <%= link_to root_url do %>
          <i class="icon-paper-clip"></i>
        <% end %>
				<%= link_to 'My Notebook', root_url %>
			</h1>
		</header>

		<section>
			<%= yield %>
		</section>

</body>
</html>
